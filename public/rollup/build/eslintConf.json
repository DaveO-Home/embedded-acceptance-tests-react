{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "camelcase": 0,
        "comma-dangle": 2,
        "quotes": 1,
        "strict": 0,
        "no-console": ["error", { "allow": ["warn", "error"] }]
    },
    "globals": {
        "jQuery": true,
        "$": true,
        "require": true,
        "System": true,
        "testit": true,
        "Stache": true,
        "steal": true,
        "rmain_container": true,
        "Rollup": true,
        "process": true,
        "module": true,
        "Promise": true,
        "__karma__": true
    },
    "env": { 
        "browser": true, "jasmine": true, "jquery": true, "amd": true
    }
}
